<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brown200"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="andres.it.historyDictionary.Activities.addTermActivity">


    <android.support.v7.widget.CardView xmlns:cardView="http://schemas.android.com/apk/res-auto"
        android:id="@+id/descriptionCardViewBackground"
        android:layout_width="301dp"
        android:layout_height="358dp"
        android:layout_gravity="center"
        cardView:cardBackgroundColor="@color/brown50"
        cardView:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/twTitle"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.06"
                android:gravity="center"
                android:text="Termine:"
                android:textSize="30dp" />

            <EditText
                android:id="@+id/etNameTerm"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.06"
                android:gravity="center"
                android:text="Descrizione"
                android:textSize="30dp" />

            <android.support.v7.widget.CardView
                android:id="@+id/descriptionCardView"
                android:layout_width="252dp"
                android:layout_height="55dp"
                cardView:cardCornerRadius="15dp"
                android:layout_gravity="center"
                android:layout_weight="0.39">

                <EditText
                    android:id="@+id/etDefinitionOfTerm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.06"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:layout_gravity="center" />
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fatto!"
        android:id="@+id/bDone"
        android:layout_gravity="right|bottom" />


</FrameLayout>
